<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="center_horizontal"
              android:layout_gravity="center"
              tools:context=".OTPActivity">
    <ImageView
            android:src="@drawable/figura2"
            android:scaleType="centerCrop"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="60dp"
            tools:ignore="ContentDescription"/>
    <TextView
            android:id="@+id/phoneLble"
            android:text="@string/verify_5588912345678"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold|normal"
            android:textColor="@color/black_100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:text="@string/enter_the_otp_code_to_verify_your_phone_number"
            android:textAlignment="center"
            android:textSize="13sp"
            android:textStyle="normal"
            android:textColor="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="14dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="15dp"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.mukesh.OtpView
                    android:id="@+id/otp_view"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:inputType="number"
                    android:itemBackground="@color/gray_200"
                    android:focusableInTouchMode="true"
                    app:OtpItemCount="6"
                    app:OtpLineColor="#AA8CFE"
                    app:OtpViewType="line"
                    android:layout_marginBottom="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <Button
                    android:id="@+id/continueBtn01"
                    android:text="@string/continuee"
                    android:textStyle="bold|normal"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/black_100"
                    android:layout_width="match_parent"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>